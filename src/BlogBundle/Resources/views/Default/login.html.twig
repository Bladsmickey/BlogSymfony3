{% extends "BlogBundle:Default:layout.html.twig" %}

{% block content %}

	<div class="col-md-6 col-md-offset-2">
	<form action=" {{path("login_check")}} " method="POST" class="form-horizontal" role="form">
			<div class="form-group">
				<legend class="text-center">Iniciar Sesion</legend>
			</div>

			<div class="form-group">
				{% if app.user != null %}
					{{dump(app.user)}}
				 {% endif %}
			</div>

			<div class="form-group">
				{% if error is defined %}
					{% for item in error %}
    
						{{item}}
    
					{% endfor %}
				 {% endif %}
			</div>

			<div class="form-group">
				<span class="control-label col-md-2">Email:</span>
				<div class="col-md-10">
					<input type="text" name="_username" id="inputEmail" class="form-control" value="{{lastUsername}}" required="required">
				</div>
			</div>

			<div class="form-group">
				<span class="control-label col-md-2">Contrase√±a:</span>
				<div class="col-md-10">
					<input type="password" name="_password" id="inputPassword" class="form-control" required="required">
				</div>
			</div>

			<input type="hidden" name="_target_path" id="target_path" class="form-control" value="/login">
	
			
	
			<div class="form-group">
				<div class="col-sm-10 col-sm-offset-5">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
	</form>
	</div>

{% endblock %}